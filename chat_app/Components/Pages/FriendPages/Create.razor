@page "/friends/create"
@using Microsoft.EntityFrameworkCore
@using chat_app.Models
@inject IDbContextFactory<chat_app.Data.chat_appContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Friend</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Friend" OnValidSubmit="AddFriend" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="accepted" class="form-label">Accepted:</label> 
                <InputCheckbox id="accepted" @bind-Value="Friend.Accepted" class="form-check-input" /> 
                <ValidationMessage For="() => Friend.Accepted" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/friends">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Friend Friend { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddFriend()
    {
        using var context = DbFactory.CreateDbContext();
        context.Friend.Add(Friend);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/friends");
    }
}
