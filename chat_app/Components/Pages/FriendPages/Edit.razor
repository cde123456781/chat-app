@page "/friends/edit"
@using Microsoft.EntityFrameworkCore
@using chat_app.Models
@inject IDbContextFactory<chat_app.Data.chat_appContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Friend</h2>
<hr />
@if (Friend is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Friend" OnValidSubmit="UpdateFriend" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Friend.User1Id" value="@Friend.User1Id" />
                <div class="mb-3">
                    <label for="accepted" class="form-label">Accepted:</label>
                    <InputCheckbox id="accepted" @bind-Value="Friend.Accepted" class="form-check-input" />
                    <ValidationMessage For="() => Friend.Accepted" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/friends">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int User1Id { get; set; }

    [SupplyParameterFromForm]
    private Friend? Friend { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Friend ??= await context.Friend.FirstOrDefaultAsync(m => m.User1Id == User1Id);

        if (Friend is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateFriend()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Friend!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!FriendExists(Friend!.User1Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/friends");
    }

    private bool FriendExists(int user1id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Friend.Any(e => e.User1Id == user1id);
    }
}
