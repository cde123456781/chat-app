@page "/groupmessages/delete"
@using Microsoft.EntityFrameworkCore
@using chat_app.Models
@inject IDbContextFactory<chat_app.Data.chat_appContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>GroupMessage</h2>
    <hr />
    @if (groupmessage is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Message</dt>
            <dd class="col-sm-10">@groupmessage.Message</dd>
        </dl>
        <EditForm method="post" Model="groupmessage" OnValidSubmit="DeleteGroupMessage" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(groupmessage is null)">Delete</button> |
            <a href="/groupmessages">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private GroupMessage? groupmessage;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        groupmessage = await context.GroupMessage.FirstOrDefaultAsync(m => m.Id == Id);

        if (groupmessage is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteGroupMessage()
    {
        using var context = DbFactory.CreateDbContext();
        context.GroupMessage.Remove(groupmessage!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/groupmessages");
    }
}
